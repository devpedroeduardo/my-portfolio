---
import { Image } from "astro:assets";
// Importe sua foto aqui:
// import profileImage from "../assets/profile.jpg";

// Dados do About (Preencha aqui)
const aboutData = {
  title: "About Me",
  subtitle: "My Journey",
  // Se não tiver imagem, deixe null para usar o placeholder
  image: null, 
  description: [
    "Hello! I'm Pedro Eduardo, a passionate Software Developer based in Brazil. My journey into the world of technology began with a curiosity about how things work on the web, which quickly turned into a career dedicated to building functional and beautiful digital experiences.",
    "With a strong foundation in Frontend Development, I love turning complex problems into simple, elegant solutions. I am constantly learning new technologies and best practices to ensure that every project I work on is scalable, performant, and accessible.",
    "When I'm not coding, you can find me playing games, reading sci-fi books, or exploring new coffee shops."
  ],
  stats: [
    { label: "Years of Experience", value: "5+" },
    { label: "Projects Completed", value: "10+" },
    { label: "Technologies Mastered", value: "10+" },
  ]
};
---

<section id="about" class="relative py-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
  
  <!-- Linha Separadora -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>

  <div class="relative z-10 max-w-6xl mx-auto">
    
    <!-- Layout Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      
      <!-- Coluna da Imagem -->
      <!-- USANDO CLASSE TAILWIND: animate-fade-in-left -->
      <div class="animate-fade-in-left relative group opacity-0">
        <!-- Efeito de brilho atrás da imagem -->
        <div class="absolute -inset-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl opacity-20 blur-xl group-hover:opacity-40 transition-opacity duration-500"></div>
        
        <div class="relative rounded-2xl overflow-hidden border border-white/10 bg-gray-800/40 backdrop-blur-sm aspect-[4/5] md:aspect-square">
          {aboutData.image ? (
            <Image 
              src={aboutData.image} 
              alt="Pedro Eduardo Profile"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
          ) : (
            // Placeholder
            <div class="w-full h-full flex flex-col items-center justify-center bg-gray-800/50 text-neutral-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mb-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="text-sm">Profile Image Placeholder</span>
            </div>
          )}
          
          <!-- Overlay sutil -->
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-transparent to-transparent opacity-60"></div>
        </div>
      </div>

      <!-- Coluna de Texto -->
      <!-- USANDO CLASSE TAILWIND: animate-fade-in-right com delay-200 -->
      <div class="animate-fade-in-right delay-200 opacity-0">
        <h2 class="text-blue-400 font-medium tracking-wide text-sm uppercase mb-2">{aboutData.subtitle}</h2>
        <h3 class="text-3xl md:text-5xl font-bold text-white mb-6">{aboutData.title}</h3>
        
        <div class="space-y-4 text-neutral-300 text-lg leading-relaxed">
          {aboutData.description.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>

        <!-- Estatísticas Rápidas -->
        <div class="grid grid-cols-3 gap-4 mt-8 pt-8 border-t border-white/10">
          {aboutData.stats.map((stat) => (
            <div class="text-center md:text-left">
              <div class="text-2xl md:text-3xl font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400">
                {stat.value}
              </div>
              <div class="text-xs md:text-sm text-neutral-500 uppercase tracking-wide mt-1">
                {stat.label}
              </div>
            </div>
          ))}
        </div>

        <!-- Botão de Ação -->
        <div class="mt-8">
          <!-- 
            CORREÇÃO: 
            1. Caminho ajustado para '/docs/...' (referente à pasta public)
            2. Adicionado atributo 'download' para forçar o download
          -->
          <a 
            href="/docs/CV_PedroEduardo.pdf" 
            download="CV_PedroEduardo.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-white/5 hover:bg-white/10 border border-white/10 rounded-lg transition-all duration-300 hover:scale-105 group"
          >
            <span>Download CV</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-y-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </a>
        </div>

      </div>

    </div>
  </div>
</section>