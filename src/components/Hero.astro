---
// src/components/Hero.astro
import { Image } from 'astro:assets'; // Importar o componente Image
import AnimatedText, { ShimmerText } from '../react/AnimatedText.tsx';
import SkillsList from '../react/Abilities.tsx';
import LogoLoop from '../components/LogoLoop.astro'; 

// Defina seu usuário do GitHub aqui para carregar o gráfico correto
const githubUsername = "devpedroeduardo"; 
const githubChartUrl = `https://ghchart.rshah.org/60a5fa/${githubUsername}`;
---

<section id="hero" class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden px-4 sm:px-6 lg:px-8 pt-20 pb-20">
  
  <!-- Background effects -->
  <div class="fixed inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 -z-50"></div>
  <div class="fixed inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-blue-900/20 via-transparent to-transparent -z-50"></div>
  <div class="fixed inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-purple-900/20 via-transparent to-transparent -z-50"></div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-5xl mx-auto text-center flex flex-col items-center justify-center">
    
    <!-- Badge -->
    <div class="mt-10 sm:mt-16 md:mt-20 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
      <span class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 mb-6 sm:mb-8 text-xs sm:text-sm font-medium text-blue-400 bg-blue-400/10 border border-blue-400/20 rounded-full backdrop-blur-sm">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        Available for new projects
      </span>
    </div>

    <!-- Main Heading -->
    <h1 class="w-full mb-6 sm:mb-8 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight flex flex-col items-center justify-center">
      <div class="block mb-1 sm:mb-2">
        <AnimatedText 
          text="Hi, I'm Pedro Eduardo" 
          className="text-white tracking-tight"
          delay={200}
          client:load
        />
      </div>
      <div class="block mt-1 sm:mt-2">
        <AnimatedText 
          text="Software Developer"
          className="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-500 to-blue-400 bg-[length:200%_auto] animate-gradient tracking-tight"
          delay={1000}
          client:load
        />
      </div>
    </h1>

    <!-- Subtitle -->
    <div class="w-full px-2 mb-8 sm:mb-12 opacity-0 animate-fade-in-up" style="animation-delay: 1.2s; animation-fill-mode: forwards;">
      <p class="text-base sm:text-lg md:text-xl text-neutral-300 max-w-2xl mx-auto leading-relaxed text-balance">
        Building <span class="inline-flex align-baseline"><ShimmerText client:load><span class="text-white font-semibold">intuitive</span></ShimmerText></span> and 
        <span class="inline-flex align-baseline"><ShimmerText client:load><span class="text-white font-semibold">memorable interfaces</span></ShimmerText></span> with 
        <span class="relative inline-block group whitespace-nowrap">
          <span class="text-white font-semibold relative z-10">cutting-edge</span>
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-500"></span>
        </span> frontend development.
      </p>
    </div>

    <!-- LogoLoop Component -->
    <div class="w-full mb-10 opacity-0 animate-fade-in-up" style="animation-delay: 1.3s; animation-fill-mode: forwards;">
       <LogoLoop />
    </div>

    <!-- GitHub Contributions Chart (Redesenhado) -->
    <div class="w-full max-w-3xl mx-auto mb-12 px-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.4s; animation-fill-mode: forwards;">
      <div class="relative p-5 rounded-2xl border border-white/10 bg-gray-900/60 backdrop-blur-md overflow-hidden group hover:border-blue-500/30 hover:shadow-2xl hover:shadow-blue-900/20 transition-all duration-500">
        
        <!-- Efeito de brilho de fundo no hover -->
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-500/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-lg pointer-events-none"></div>
        
        <div class="relative z-10">
          <!-- Cabeçalho do Card -->
          <div class="flex items-center justify-between mb-4 px-1">
            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                <span class="text-sm font-medium text-neutral-300">Contribution Graph</span>
            </div>
            <a href={`https://github.com/${githubUsername}`} target="_blank" class="text-xs font-medium px-3 py-1 rounded-full bg-white/5 border border-white/5 text-neutral-400 hover:text-white hover:bg-white/10 hover:border-white/10 transition-all">
              @{githubUsername}
            </a>
          </div>
          
          <!-- Imagem do Gráfico - Substituída por <Image /> -->
          <div class="overflow-x-auto custom-scrollbar pb-2 pt-1 flex justify-center">
            <Image 
              src={githubChartUrl} 
              alt={`${githubUsername}'s Github chart`} 
              width={700}
              height={120}
              class="w-full min-w-[600px] h-auto opacity-70 group-hover:opacity-100 transition-opacity duration-500"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Buttons -->
    <div class="w-full flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0 animate-fade-in-up px-4" style="animation-delay: 1.5s; animation-fill-mode: forwards;">
      <a href="#projects" class="w-full sm:w-auto group relative inline-flex items-center justify-center px-8 py-3.5 sm:py-4 text-base font-semibold text-white rounded-lg overflow-hidden transition-all duration-300">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 transition-all duration-300 group-hover:scale-110"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
        <span class="relative z-10 flex items-center gap-2">
          View My Work
          <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
        </span>
      </a>
      
      <a href="#contact" class="w-full sm:w-auto group relative inline-flex items-center justify-center px-8 py-3.5 sm:py-4 text-base font-semibold text-white bg-transparent border-2 border-neutral-600 rounded-lg overflow-hidden transition-all duration-300 hover:border-white">
        <span class="relative z-10 flex items-center gap-2">
          Get In Touch
          <svg class="w-5 h-5 transition-transform group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
        </span>
      </a>
    </div>

    <!-- SkillsList Section -->
    <div class="w-full mt-16 opacity-0 animate-fade-in-up" style="animation-delay: 1.8s; animation-fill-mode: forwards;">
      <SkillsList client:visible />
    </div>

  </div>

  <!-- Background Orbs -->
  <div class="absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 bg-blue-500/10 rounded-full blur-3xl animate-float-slow pointer-events-none"></div>
  <div class="absolute bottom-1/4 right-1/4 w-60 h-60 sm:w-80 sm:h-80 bg-purple-500/10 rounded-full blur-3xl animate-float-slower pointer-events-none"></div>

</section>

<style>
  /* Custom scrollbar para o gráfico em telas pequenas */
  .custom-scrollbar::-webkit-scrollbar {
    height: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 2px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>