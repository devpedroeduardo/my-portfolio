---
// src/components/Header.astro
---

<header class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
  <!-- 
    Desktop: Header com hover effect
    Mobile: Header sempre visível e adaptado
  -->
  
  <!-- Versão Desktop (md e acima) -->
  <div class="hidden md:block group py-4">
    <nav class="flex justify-between items-center w-auto max-w-md mx-auto px-8 lg:px-10 py-3 lg:py-4
                bg-gray-900/80 backdrop-blur-lg rounded-full
                border border-gray-700/50
                opacity-0 translate-y-[-100%] group-hover:opacity-100 group-hover:translate-y-0
                transition-all duration-300 ease-in-out">
      <div class="flex w-full justify-center gap-x-8 lg:gap-x-12 text-neutral-300 text-sm lg:text-base">
        <a 
          href="#hero" 
          class="hover:text-white hover:drop-shadow-[0_0_4px_rgba(255,255,255,0.5)] transition-all duration-300"
        >Home</a>
        <a 
          href="#projects" 
          class="hover:text-white hover:drop-shadow-[0_0_4px_rgba(255,255,255,0.5)] transition-all duration-300"
        >Projects</a>
        <a 
          href="#contact" 
          class="hover:text-white hover:drop-shadow-[0_0_4px_rgba(255,255,255,0.5)] transition-all duration-300"
        >Contacts</a>
      </div>
    </nav>
  </div>

  <!-- Versão Mobile (abaixo de md) -->
  <nav class="md:hidden bg-gray-900/95 backdrop-blur-lg border-b border-gray-700/50">
    <div class="container-responsive py-4">
      <div class="flex justify-between items-center gap-4 text-neutral-300 text-sm">
        <a 
          href="#hero" 
          class="flex-1 text-center py-2 px-3 hover:text-white hover:bg-gray-800/50 rounded-lg transition-all duration-200 active:scale-95"
        >Home</a>
        <a 
          href="#projects" 
          class="flex-1 text-center py-2 px-3 hover:text-white hover:bg-gray-800/50 rounded-lg transition-all duration-200 active:scale-95"
        >Projects</a>
        <a 
          href="#contact" 
          class="flex-1 text-center py-2 px-3 hover:text-white hover:bg-gray-800/50 rounded-lg transition-all duration-200 active:scale-95"
        >Contacts</a>
      </div>
    </div>
  </nav>
</header>

<!-- Espaçador para compensar o header fixo -->
<div class="h-16 md:h-0"></div>