              },
              {
                href: "https://linkedin.com/in/pedro-eduardo",
                label: "LinkedIn",
                color: "hover:text-blue-400",
                icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>'
              },
              {
                href: "https://discord.com/users/seu_id", 
                label: "Discord",
                color: "hover:text-indigo-400",
                icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2763-3.68-.2763-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.419-2.1568 2.419zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.419-2.1568 2.419z"/></svg>'
              },
              {
                href: "https://mail.google.com/mail/?view=cm&fs=1&to=pedroedu77@gmail.com", 
                label: "Gmail",
                color: "hover:text-red-500",
                icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>'
              }
            ].map((link) => (
              <a
                href={link.href}
                target="_blank"
                class={`p-3 bg-gray-800/50 rounded-xl border border-white/5 text-neutral-400 transition-all duration-300 hover:scale-110 hover:border-white/10 ${link.color}`}
                aria-label={link.label}
              >
                <Fragment set:html={link.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Coluna 2: Tech Stack (Minimalista) -->
      <div class="flex flex-col items-center lg:items-start space-y-6">
        <h4 class="text-white font-bold text-lg">Tech Stack</h4>
        <div class="space-y-4 w-full max-w-xs">
           <div class="flex items-center justify-between p-3 bg-gray-800/30 rounded-lg border border-white/5 hover:border-white/10 transition-colors">
              <span class="text-neutral-400 text-sm">Built with</span>
              <span class="flex items-center gap-2 text-white font-medium">
                 <!-- Usando arquivo da pasta public/svg -->
                 <img src="/svg/astro.svg" alt="Astro Logo" class="w-5 h-5" width="20" height="20" loading="lazy" decoding="async" />
                 Astro
              </span>
           </div>
           <div class="flex items-center justify-between p-3 bg-gray-800/30 rounded-lg border border-white/5 hover:border-white/10 transition-colors">
              <span class="text-neutral-400 text-sm">Styled with</span>
              <span class="flex items-center gap-2 text-blue-300 font-medium">
                 <!-- Usando arquivo da pasta public/svg -->
                 <img src="/svg/tailwindcss.svg" alt="Tailwind CSS Logo" class="w-5 h-5" width="20" height="20" loading="lazy" decoding="async" />
                 Tailwind
              </span>
           </div>
           <div class="flex items-center justify-between p-3 bg-gray-800/30 rounded-lg border border-white/5 hover:border-white/10 transition-colors">
              <span class="text-neutral-400 text-sm">Deployed on</span>
              <span class="flex items-center gap-2 text-white font-medium">
                 <!-- Usando arquivo da pasta public/svg - Adicionei classe invert para ficar branco -->
                 <img src="/svg/vercel.svg" alt="Vercel Logo" class="w-5 h-5 invert" width="20" height="20" loading="lazy" decoding="async" />
                 Vercel
              </span>
           </div>
        </div>
      </div>

      <!-- Coluna 3: Spotify & Inovação (Now Playing / Quote) -->
      <div class="flex flex-col items-center lg:items-start space-y-6">
        <h4 class="text-white font-bold text-lg">Vibes</h4>
        
        <!-- Spotify Embed (Playlist Atualizada) -->
        <div class="w-full max-w-xs overflow-hidden rounded-xl border border-white/5 shadow-lg bg-black">
          <iframe
            style="border-radius:12px"
            src="https://open.spotify.com/embed/playlist/2uDIIEaOSoeg0P5WghdpCK?utm_source=generator&theme=0"
            width="100%"
            height="80"
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
            title="Spotify Embed: Coding Playlist"
          ></iframe>
        </div>

        <!-- Inovação: Card "Daily Wisdom" ou Status -->
        <div class="w-full max-w-xs p-4 bg-gradient-to-r from-blue-900/20 to-purple-900/20 rounded-xl border border-white/10 backdrop-blur-sm">
            <div class="flex items-center gap-3 mb-2">
                <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                </span>
                <span class="text-xs font-semibold text-green-300 uppercase tracking-wide">Status</span>
            </div>
            <p class="text-sm text-neutral-300 italic">
              "Coding the future, one commit at a time."
            </p>
        </div>

      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-white/5 text-center">
      <p class="text-neutral-500 text-sm">
        &copy; {new Date().getFullYear()} <span class="text-white font-medium">Pedro Eduardo</span>. 
        Built with passion and coffee.
      </p>
    </div>
  </div>
</footer>