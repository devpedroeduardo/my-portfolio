---
// src/layouts/MainLayout.astro
import '@/styles/global.css'; // Importa os estilos do Tailwind
import Header from '@/components/Header.astro';
// import Footer from '@/components/Footer.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---
<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    
    <!-- FAVICON -->
    <!-- Certifica-te que tens um arquivo 'favicon.svg' na pasta 'public' -->
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <!-- Se o teu favicon for .png ou .ico, descomenta e ajusta abaixo: -->
    <!-- <link rel="icon" type="image/png" href="/favicon.png" /> -->
    <link rel="icon" type="image/x-icon" href="/favicon/P.svg" />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-neutral-200 font-sans antialiased selection:bg-blue-500/30 selection:text-blue-200">
    <Header />
    <main>
      <slot /> <!-- O conteúdo da página será injetado aqui -->
    </main>
    <!-- <Footer /> -->
  </body>
</html>

<style is:global>
  /* Estilos para a barra de rolagem (Scrollbar) ficar escura */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #0d1117; 
  }
  ::-webkit-scrollbar-thumb {
    background: #30363d; 
    border-radius: 5px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #484f58; 
  }
</style>